<div class="row">
   <div class="col-md-3">
    <h2>User info</h2>
    <!--<div><#= image_tag @user.get_profile_image(100,100) %></div>-->
    <table class="table">
      <tr>
       <th>name</th>
        <th><%#= @user.name %></th>
      </tr>
    <tr>
      <th>introduction</th>
      <th></th>
    </tr>
  </table>
   <div class="row">
      <%#= link_to "編集", edit_user_path(@user) %>
    </div>

  <h2>New book</h2>
   <%= form_with model: @book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit "Create Book" %>
    <% end %>
  </div>

  <div class="col-md-9">
    <h2>Books</h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(80,80) %></td>
          <td>
            <%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>
